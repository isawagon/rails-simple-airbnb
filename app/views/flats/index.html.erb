<div class='banner'>
  <h1>Banner</h1>
</div>
<div class='container'>
  <h1>All our flats (<%= @flats.count  %>)</h1>
  <ul class = 'list-inline'>

    <% @flats.each do |flat| %>
    <li class= 'list-inline-item' >
      <div class='card'>

          <h3><%=flat.name%></h3>

      </div>
    </li>
    <% end%>

  </ul>
</div>
